<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/item_detail_image"
        android:layout_width="249dp"
        android:layout_height="278dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="84dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/I_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="132dp"
        android:layout_marginTop="84dp"
        android:text="영양성분"
        android:textSize="40dp"
        android:textStyle="bold"
        android:fontFamily="@font/maplestory_light"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_detail_name"
        android:layout_width="257dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="76dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/maplestory_light"
        android:text="식품 : "
        android:textSize="28dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/I_title" />

    <TextView
        android:id="@+id/item_detail_cal"
        android:layout_width="257dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="76dp"
        android:fontFamily="@font/maplestory_light"
        android:text="칼로리 : "
        android:textSize="28dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_detail_name" />
    <TextView
        android:id="@+id/item_detail_carbs"
        android:layout_width="257dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="76dp"
        android:fontFamily="@font/maplestory_light"
        android:text="탄수화물 : "
        android:textSize="28dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_detail_cal" />
    <TextView
        android:id="@+id/item_detail_protein"
        android:layout_width="257dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="76dp"
        android:fontFamily="@font/maplestory_light"
        android:text="단백질 : "
        android:textSize="28dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_detail_carbs" />
    <TextView
        android:id="@+id/item_detail_fat"
        android:layout_width="257dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="76dp"
        android:fontFamily="@font/maplestory_light"
        android:text="지방 : "
        android:textSize="28dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_detail_protein" />
    <TextView
        android:id="@+id/item_detail_sugar"
        android:layout_width="257dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="76dp"
        android:fontFamily="@font/maplestory_light"
        android:text="당 : "
        android:textSize="28dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_detail_fat" />
</androidx.constraintlayout.widget.ConstraintLayout>